<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff7f9fa"
        android:orientation="vertical">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@mipmap/bg">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/se_kuai"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/item_main_sekuai" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/se_kuai"
                    android:text="WIFI"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:src="@mipmap/shape" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_title"
                android:layout_marginRight="11dp">

                <LinearLayout
                    android:layout_width="192dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="11dp"
                    android:background="@mipmap/shape1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="已连接wifi"
                        android:textColor="#4DFFBB"
                        android:textSize="26sp" />

                    <TextView
                        android:layout_width="89dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        android:text="ChinaNet-A28"
                        android:textColor="#ffffffff"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:src="@mipmap/home_icon_ip" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:layout_marginTop="-113dp"
